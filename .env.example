########################################
# Copy this to .env and fill in real values
########################################

# Core
NODE_ENV=development
PORT=3000
PUBLIC_BASE_URL=http://localhost:3000
SITE_URL=http://localhost:3000

# Security
SESSION_SECRET=change-this-session-secret
JWT_SECRET=change-this-jwt-secret
BCRYPT_ROUNDS=10

# Rate limiting and debug toggles
AUTH_RATE_WINDOW_MS=900000
AUTH_RATE_MAX=20
RESET_DEBUG=false
ENABLE_AUTO_SCRAPING=false

# Email (Gmail with App Password or SMTP)
EMAIL_USER=yourgmail@gmail.com
# App Password can include spaces; code strips them automatically
EMAIL_PASS=your-16-char-app-password
EMAIL_FROM=TalentSync <no-reply@talentsync.shop>
ADMIN_NOTIFY_EMAIL=your-admin@domain.com

# Optional: Custom SMTP (leave commented to use Gmail above)
# SMTP_HOST=smtp.yourprovider.com
# SMTP_PORT=587
# SMTP_SECURE=false

# Stripe Billing (subscriptions)
# Provide your real test/live keys and price IDs. Code accepts either pair of names.
# Secret key (one of these):
STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_SECRET=
# Publishable key (for client-side Stripe.js if needed)
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
# Price IDs (set at least one pair):
STRIPE_PRICE_BASIC=price_basic_25
STRIPE_PRICE_PRO=price_pro_50
STRIPE_BASIC_PRICE_ID=price_basic_25
STRIPE_PRO_PRICE_ID=price_pro_50
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Google OAuth (optional unless using Google login)
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Database (not required for JSON mode; used by legacy scripts)
DB_HOST=localhost
DB_USER=devuser
DB_PASSWORD=devpassword123
DB_NAME=talentsync_demo
DB_PORT=3306

# MongoDB Atlas (for Mongoose)
MONGODB_URI=mongodb+srv://petersondameu:<db_password>@cluster0.bcvofxd.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0

# Job API keys (optional)
ADZUNA_APP_ID=demo
ADZUNA_APP_KEY=demo
ZIPRECRUITER_API_KEY=zr_demo_key_123
INDEED_PUBLISHER_ID=indeed_demo_456
RAPIDAPI_KEY=rapidapi_demo_key

# Misc/optional integrations
SENDGRID_API_KEY=sendgrid_demo_key
FROM_EMAIL=noreply@talentsync.com
APIFY_TOKEN=your-apify-token
APIFY_DATASET_ID=aRbNkNpywgJGzUCpr
